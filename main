#include <Adafruit_NeoPixel.h>  //Utilizza libreria Neopixel di Adafruit
#define PIN 2 //A quale pin Ã¨ collegato il nostro led
#define LUN 12 //Lunghezza striscia led
#define delaytime 25

Adafruit_NeoPixel LED = Adafruit_NeoPixel(LUN, PIN, NEO_GRB + NEO_KHZ800);

void setup(){}

void loop(){

  for(int i=0; i<LUN; i++){
     LED.setPixelColor(i, LED.Color(254,254,0));
     LED.show();
     delay(delaytime/2);
  }

  for(int i=0; i<LUN; i++){
     LED.setPixelColor(i, LED.Color(0,0,0));
     LED.show();
     delay(delaytime/2);
  }
  delay(delaytime);
}
